}

/* 头部导航栏 */
.top-wrap {
  background-color: #373737;
  z-index: 99998;  
  position: fixed;
  width: 100%;
  top: 0;
  display: flex;
  justify-content: flex-start;
  align-items: flex-end;
}

.wrap-header {
  height: 80rpx;
  background-color: #373737;
  width: 100%;
}
.today-date {
  height: 100%;
  position: relative;
  display: inline-block;
}
.date {
  margin-left: 20rpx;
  line-height: 80rpx;
  font-size: 60rpx;
  color: rgb(243, 239, 236);
  font-family: 'Infinity';
}
.month-year {
  padding-right: 20rpx;
  margin-left: 14rpx;
  line-height: 80rpx;
  font-size: 24rpx;
  font-weight: bold;
  color: rgb(243, 239, 236);
  font-family: 'Infinity';
}
.wrap-title {
  margin: 0 auto;
  color: rgb(243, 239, 236);
  font-family: 'Infinity';
  display: inline-block;
  font-size: 24rpx;
}

/* 资讯模块 */
.swiper {
  height: 100%;
}
.message {
  position: relative;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: rgb(255, 255, 255)
}
.message-image {
  width: 100%;
  height: 480rpx;
}
.image-form {
  margin-top: 24rpx;
  font-size: 20rpx;
  color: #999999;
}
.message-con {
  box-sizing: border-box;
  padding: 30rpx 100rpx;
}
.message-text {
  font-size: 24rpx;
  color: #373737;
  line-height: 44rpx;
}
.author {
  height: 80rpx;
  line-height: 80rpx;
  font-size: 20rpx;
  color: #999999; 
}















































